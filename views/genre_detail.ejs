<% layout('layout') -%>
<% stylesheet('../../stylesheets/style.css') -%>

<h1 class="index-h1">Genre: <%= genre.name %> </h1>

<div style="margin-left:20px;margin-top:20px">
    <h4>Books</h4>
    <% genre_books.forEach((book) => { %>
        <dl>
            <a href="<%- book.url %>"><%- book.title %> </a>
            <dd><%- book.summary %> </dt>
        </dl>

    <% }) %>
    <% if(genre_books.length === 0) { %>
        <dl>
            <li>We currently don't have books of this genre.</li>
        </dl>
    <% } %>  


</div>